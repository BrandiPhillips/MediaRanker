<!-- Form for editing and adding new media type(book, movie, album) -->
<%= render "shared/header" %>

<%= form_for @current do |f|%>
  <%= f.label "name" %>
  <%= f.text_field :title %>

  <%= f.label @author_type %>
  <%= f.text_field :author %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= submit_tag "Save" %>
<% end %>
